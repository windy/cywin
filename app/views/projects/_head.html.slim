.head
  .logo
    - if @project.logo.present?
      = image_tag @project.logo.image_url
    - else
      = image_tag 'default-project.jpg'
  .name-area
    h5.name
      = link_to @project.name, @project
    .sub-name
      | #{@project.oneword}
  = render 'star'
  hr
    .info
      - if @project.link.present?
        .link
          i.fa.fa-link
          span
            = link_to @project.link, "http://#{@project.link}", target: '_blank'
      .address
        i.fa.fa-map-marker
        span
          = raw project_cities_link(@project)
      .category
        i.fa.fa-tags
        span.category
          = raw project_categories_link(@project)